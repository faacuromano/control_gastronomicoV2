# ==============================================================================
# PentiumPOS - Backend Environment Variables
# ==============================================================================
# Copia este archivo como .env y configura los valores según tu entorno.
# NUNCA subas el archivo .env real a git (ya está en .gitignore)
# ==============================================================================

# ------------------------------------------------------------------------------
# REQUIRED - El sistema NO arranca sin estas variables
# ------------------------------------------------------------------------------

# URL de conexión a MySQL
# Formato: mysql://USUARIO:PASSWORD@HOST:PUERTO/BASE_DE_DATOS
DATABASE_URL="mysql://root:password@localhost:3306/pentiumpos"

# Secreto para firmar JWT tokens
# IMPORTANTE: En producción usa un string aleatorio de mínimo 32 caracteres
# Puedes generar uno con: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET="cambiar_en_produccion_minimo_32_caracteres"

# ------------------------------------------------------------------------------
# OPTIONAL - Tienen valores por defecto
# ------------------------------------------------------------------------------

# Puerto del servidor (default: 3001)
PORT=3001

# Orígenes CORS permitidos (separados por coma)
# En desarrollo: http://localhost:5173
# En producción: https://tudominio.com
CORS_ORIGINS="http://localhost:5173"

# Entorno de ejecución: development | production | test
# Afecta: rate limiting, logging verbose, errores detallados
NODE_ENV="development"

# Nivel de logging: debug | info | warn | error
LOG_LEVEL="info"

# ------------------------------------------------------------------------------
# REDIS & QUEUE - Required for delivery integrations and async processing
# ------------------------------------------------------------------------------

# Redis host for BullMQ queue system
REDIS_HOST="localhost"

# Redis port
REDIS_PORT="6379"

# Redis password - CRITICAL: Set in production to prevent unauthorized access
# Leave empty in development if Redis has no password configured
REDIS_PASSWORD=""

# Enable queue workers (set to 'true' to process webhooks)
ENABLE_QUEUE_WORKERS="false"

# ------------------------------------------------------------------------------
# SEED DATA - Solo para desarrollo/testing
# ------------------------------------------------------------------------------

# PIN del usuario admin al ejecutar seed
# IMPORTANTE: Cambiar después de crear usuario admin
SEED_ADMIN_PIN="999999"
