# =============================================================================
# Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
MYSQL_ROOT_PASSWORD=pentiumpos_dev_root_password_change_me
MYSQL_DATABASE=pentiumpos
MYSQL_USER=pentium_user
MYSQL_PASSWORD=pentium_pass_dev_change_me

# Prisma Database URL (automatically constructed from above)
# For development (docker-compose.yml):
DATABASE_URL=mysql://pentium_user:pentium_pass_dev_change_me@localhost:3306/pentiumpos?connection_limit=20&pool_timeout=20

# For production simulation (docker-compose.production-sim.yml):
# DATABASE_URL=mysql://gastro_user:gastro_pass_2026@localhost:3306/control_gastronomico?connection_limit=100&pool_timeout=10

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
QUEUE_PROVIDER=bullmq

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
NODE_ENV=development
PORT=3001

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
# CRITICAL: Change this in production! Minimum 32 characters
JWT_SECRET=development_secret_change_in_production_must_be_at_least_32_characters_long

# API Keys for delivery integrations (if needed)
# RAPPI_API_KEY=your_rappi_key_here
# PEDIDOSYA_API_KEY=your_pedidosya_key_here

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=debug

# -----------------------------------------------------------------------------
# Frontend Environment Variables (must start with VITE_)
# -----------------------------------------------------------------------------
VITE_API_URL=http://localhost:3001/api/v1
VITE_WS_URL=ws://localhost:3001
